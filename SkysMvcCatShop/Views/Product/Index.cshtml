@using SkysMvcCatShop.Infrastracture.Paging
@model PagedResult<SkysMvcCatShop.Data.Product>
@{
    ViewData["Title"] = "Products";
}

<div class="container p-3">

    <div class="row">

        <div class="col-lg-12 mb-5">
            <div class="card">
                <div class="card-header">
                    <h3 class="h6 text-uppercase mb-0">All Products</h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <a asp-action="New" asp-controller="Product" class="btn btn-primary">Add New Product</a>
            </div>
        </div>
        <br />
        <table class="table">
            <tr>
                <th scope="col">Product Id</th>
                <th scope="col"> Name</th>
                <th scope="col">Color</th>
                <th scope="col">Price</th>
                <th scope="col">Created</th>
                <th scope="col">Last Bought</th>
                <th scope="col">Bar Code</th>
                <th scope="col">Popularity</th>
                <th></th>

            </tr>
            @{
                var i = 1;
            }
            @foreach (var product in Model.Results)
            {
                var rowNo = (Model.CurrentPage - 1) * Model.PageSize + i;
                i++;
                <tr>
                    <td width="10%">@product.Id</td>
                    <td width="10%">@product.Name</td>
                    <td width="10%">@product.Color</td>
                    <td width="10%">@product.Price</td>
                    <td width="15%">@product.Created</td>
                    <td width="15%">@product.LastBought</td>
                    <td width="15%">@product.Ean13</td>
                    <td width="10%">@product.PopularityPercent</td>
                    <td width="5%">
                        <a asp-action="Edit" asp-controller="Product" asp-route-productId="@product.Id"><i class='bx bx-edit'></i></a>
                    </td>

                </tr>
            }

