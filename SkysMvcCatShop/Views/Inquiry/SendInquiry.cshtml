@using SkysMvcCatShop.Data
@model SkysMvcCatShop.ViewModels.InquirySendViewModel


<h2>Fill out this form:</h2>
<form asp-controller="Inquiry" asp-action="SendInquiry">
    <div class="form-group">
                <label asp-for="Name">Namn</label>
                <input class="form-control" asp-for="Name">
                <span asp-validation-for="Name" class="field-validation-error"></span>
            </div>
    <div class="form-group">
                <label asp-for="Email">Epost</label>
                <input class="form-control" asp-for="Email">
                <span asp-validation-for="Email" class="field-validation-error" placeholder="Provide email address"></span>
            </div>
     <div class="form-group">
                <label asp-for="TelephoneNumber">Telefon</label>
                <input class="form-control" asp-for="TelephoneNumber">
                <span asp-validation-for="TelephoneNumber" class="field-validation-error"></span>
            </div>
    <div class="form-group">
                <label asp-for="InquiryType">Ärende </label>
                <select asp-for="InquiryType" asp-items="Html.GetEnumSelectList<InquiryTypes>()" >
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="InquiryType" class="field-validation-error"></span>
            </div>     
   
    <div class="form-group">
        <label asp-for="Text">Text</label>
        <textarea asp-for="Text" class="form-control" cols="40" rows="5">
        </textarea>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>


@section scripts
{
<partial name="_ValidationScriptsPartial" />
}  